{% extends 'base.html.twig' %}

{% block title %}Accueil - ArtConnect{% endblock %}

{% block body %}
<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">
            <i class="fas fa-palette"></i> Bienvenue sur ArtConnect
        </h1>
        <p class="lead mb-4" style="font-size: 1.5rem;">
            La plateforme de gestion de projets artistiques
        </p>
        <p class="mb-5" style="font-size: 1.2rem;">
            Découvrez des projets artistiques uniques et créatifs<br>
            et laissez-vous inspirer par la créativité sans limites
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a href="{{ path('project_index') }}" class="btn btn-light btn-lg">
                <i class="fas fa-folder-open"></i> Explorer les projets
            </a>
        </div>
    </div>
</div>

<div class="container">
    <h2 class="section-title">
        <i class="fas fa-fire"></i> Projets récents
    </h2>

    {% if recent_projects %}
        <div class="row g-4">
            {% for project in recent_projects %}
                <div class="col-md-4">
                    <div class="card h-100">
                        {% if project.image %}
                            <img src="{{ asset('uploads/projects/' ~ project.image) }}"
                                 class="card-img-top"
                                 alt="{{ project.title }}">
                        {% else %}
                            <div class="card-img-top bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 250px; display: flex; align-items: center; justify-content: center; color: white;">
                                <i class="fas fa-image fa-4x"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ project.title }}</h5>
                            <p class="card-text">
                                {{ project.description|slice(0, 100) }}{{ project.description|length > 100 ? '...' : '' }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">{{ project.category.name }}</span>
                                <small class="text-muted">{{ project.createdAt|date('d/m/Y') }}</small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-primary w-100">
                                <i class="fas fa-eye"></i> Voir le projet
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-5">
            <a href="{{ path('project_index') }}" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-right"></i> Voir tous les projets
            </a>
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> Aucun projet pour le moment. Revenez plus tard !
        </div>
    {% endif %}
</div>
{% endblock %}
