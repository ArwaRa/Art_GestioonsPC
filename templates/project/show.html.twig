{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - ArtConnect{% endblock %}

{% block body %}
<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('project_index') }}">Projets</a></li>
            <li class="breadcrumb-item active">{{ project.title }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                {% if project.image %}
                    <img src="{{ asset('uploads/projects/' ~ project.image) }}"
                         class="card-img-top"
                         alt="{{ project.title }}"
                         style="max-height: 600px; object-fit: cover;">
                {% else %}
                    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 400px; display: flex; align-items: center; justify-content: center; color: white;">
                        <i class="fas fa-image fa-5x"></i>
                    </div>
                {% endif %}
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="card-title display-5">{{ project.title }}</h1>
                        <span class="badge bg-primary fs-6">{{ project.category.name }}</span>
                    </div>

                    <div class="mb-4">
                        <h5><i class="fas fa-info-circle text-primary"></i> Description</h5>
                        <p class="card-text" style="font-size: 1.1rem; line-height: 1.8;">
                            {{ project.description }}
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-top pt-3">
                        <div>
                            <i class="fas fa-calendar-alt text-muted"></i>
                            <small class="text-muted">Créé le {{ project.createdAt|date('d/m/Y') }}</small>
                        </div>
                        <div>
                            <a href="{{ path('project_index', {'category': project.category.id}) }}" class="btn btn-outline-primary">
                                <i class="fas fa-tag"></i> Plus dans {{ project.category.name }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-tie"></i> Artiste</h5>
                </div>
                <div class="card-body text-center">
                    {% if project.artist.profileImage %}
                        <img src="{{ asset('uploads/artists/' ~ project.artist.profileImage) }}"
                             class="rounded-circle mb-3"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             alt="{{ project.artist.name }}">
                    {% else %}
                        <div class="mx-auto mb-3" style="width: 150px; height: 150px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white;">
                            <i class="fas fa-user fa-4x"></i>
                        </div>
                    {% endif %}

                    <h4>{{ project.artist.name }}</h4>

                    {% if project.artist.biography %}
                        <p class="text-muted small">
                            {{ project.artist.biography|slice(0, 100) }}{{ project.artist.biography|length > 100 ? '...' : '' }}
                        </p>
                    {% endif %}

                    <a href="{{ path('artist_show', {'id': project.artist.id}) }}" class="btn btn-primary w-100">
                        <i class="fas fa-eye"></i> Voir le profil complet
                    </a>

                    {% if project.artist.email %}
                        <a href="mailto:{{ project.artist.email }}" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-envelope"></i> Contacter
                        </a>
                    {% endif %}

                    {% if project.artist.website %}
                        <a href="{{ project.artist.website }}" target="_blank" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-globe"></i> Site web
                        </a>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-share-alt"></i> Partager</h5>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted small mb-3">Partagez ce projet avec vos amis</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" onclick="alert('Fonctionnalité de partage à implémenter')">
                            <i class="fab fa-facebook"></i> Facebook
                        </button>
                        <button class="btn btn-outline-info" onclick="alert('Fonctionnalité de partage à implémenter')">
                            <i class="fab fa-twitter"></i> Twitter
                        </button>
                        <button class="btn btn-outline-danger" onclick="alert('Fonctionnalité de partage à implémenter')">
                            <i class="fab fa-pinterest"></i> Pinterest
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if related_projects %}
        <div class="mt-5">
            <h3 class="mb-4"><i class="fas fa-folder"></i> Autres projets de {{ project.artist.name }}</h3>
            <div class="row g-4">
                {% for related in related_projects %}
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100">
                            {% if related.image %}
                                <img src="{{ asset('uploads/projects/' ~ related.image) }}"
                                     class="card-img-top"
                                     alt="{{ related.title }}">
                            {% else %}
                                <div class="card-img-top bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 200px; display: flex; align-items: center; justify-content: center; color: white;">
                                    <i class="fas fa-image fa-3x"></i>
                                </div>
                            {% endif %}
                            <div class="card-body">
                                <h6 class="card-title">{{ related.title }}</h6>
                                <a href="{{ path('project_show', {'id': related.id}) }}" class="btn btn-sm btn-primary w-100 mt-2">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
