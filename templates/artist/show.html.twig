{% extends 'base.html.twig' %}

{% block title %}{{ artist.name }} - ArtConnect{% endblock %}

{% block body %}
<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('artist_index') }}">Artistes</a></li>
            <li class="breadcrumb-item active">{{ artist.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    {% if artist.profileImage %}
                        <img src="{{ asset('uploads/artists/' ~ artist.profileImage) }}"
                             class="rounded-circle mb-3"
                             style="width: 200px; height: 200px; object-fit: cover;"
                             alt="{{ artist.name }}">
                    {% else %}
                        <div class="mx-auto mb-3" style="width: 200px; height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white;">
                            <i class="fas fa-user fa-5x"></i>
                        </div>
                    {% endif %}

                    <h2 class="card-title">{{ artist.name }}</h2>

                    <div class="mb-4">
                        <span class="badge bg-primary fs-6">
                            <i class="fas fa-folder"></i> {{ projects|length }} projet{{ projects|length > 1 ? 's' : '' }}
                        </span>
                    </div>

                    {% if artist.email %}
                        <a href="mailto:{{ artist.email }}" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-envelope"></i> Contacter
                        </a>
                    {% endif %}

                    {% if artist.website %}
                        <a href="{{ artist.website }}" target="_blank" class="btn btn-outline-primary w-100">
                            <i class="fas fa-globe"></i> Visiter le site web
                        </a>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-share-alt"></i> Partager</h5>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted small mb-3">Partagez ce profil</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" onclick="alert('Fonctionnalité de partage à implémenter')">
                            <i class="fab fa-facebook"></i> Facebook
                        </button>
                        <button class="btn btn-outline-info" onclick="alert('Fonctionnalité de partage à implémenter')">
                            <i class="fab fa-twitter"></i> Twitter
                        </button>
                        <button class="btn btn-outline-success" onclick="alert('Fonctionnalité de partage à implémenter')">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            {% if artist.biography %}
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user-circle"></i> Biographie</h5>
                    </div>
                    <div class="card-body">
                        <p style="font-size: 1.1rem; line-height: 1.8; white-space: pre-line;">{{ artist.biography }}</p>
                    </div>
                </div>
            {% endif %}

            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-folder-open"></i> Portfolio ({{ projects|length }} projet{{ projects|length > 1 ? 's' : '' }})</h5>
                </div>
                <div class="card-body">
                    {% if projects %}
                        <div class="row g-4">
                            {% for project in projects %}
                                <div class="col-md-6">
                                    <div class="card h-100">
                                        {% if project.image %}
                                            <img src="{{ asset('uploads/projects/' ~ project.image) }}"
                                                 class="card-img-top"
                                                 alt="{{ project.title }}"
                                                 style="height: 200px; object-fit: cover;">
                                        {% else %}
                                            <div class="card-img-top bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 200px; display: flex; align-items: center; justify-content: center; color: white;">
                                                <i class="fas fa-image fa-3x"></i>
                                            </div>
                                        {% endif %}
                                        <div class="card-body">
                                            <h5 class="card-title">{{ project.title }}</h5>
                                            <p class="card-text">
                                                {{ project.description|slice(0, 100) }}{{ project.description|length > 100 ? '...' : '' }}
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-primary">{{ project.category.name }}</span>
                                                <small class="text-muted">{{ project.createdAt|date('d/m/Y') }}</small>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-primary w-100">
                                                <i class="fas fa-eye"></i> Voir le projet
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i> Cet artiste n'a pas encore de projets publiés.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
