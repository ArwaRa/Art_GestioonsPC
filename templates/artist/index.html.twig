{% extends 'base.html.twig' %}

{% block title %}Artistes - ArtConnect{% endblock %}

{% block body %}
<div class="hero-section text-center" style="padding: 60px 0;">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-users"></i> Nos Artistes
        </h1>
        <p class="lead">
            Découvrez les talents créatifs qui font vivre notre plateforme
        </p>
    </div>
</div>

<div class="container">
    {% if artists %}
        <div class="row g-4">
            {% for artist in artists %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            {% if artist.profileImage %}
                                <img src="{{ asset('uploads/artists/' ~ artist.profileImage) }}"
                                     class="rounded-circle mb-3"
                                     style="width: 150px; height: 150px; object-fit: cover;"
                                     alt="{{ artist.name }}">
                            {% else %}
                                <div class="mx-auto mb-3" style="width: 150px; height: 150px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white;">
                                    <i class="fas fa-user fa-4x"></i>
                                </div>
                            {% endif %}

                            <h4 class="card-title">{{ artist.name }}</h4>

                            {% if artist.biography %}
                                <p class="card-text text-muted">
                                    {{ artist.biography|slice(0, 100) }}{{ artist.biography|length > 100 ? '...' : '' }}
                                </p>
                            {% else %}
                                <p class="card-text text-muted">Aucune biographie disponible.</p>
                            {% endif %}

                            <div class="mb-3">
                                <span class="badge bg-info">
                                    <i class="fas fa-folder"></i> {{ artist.projects|length }} projet{{ artist.projects|length > 1 ? 's' : '' }}
                                </span>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="{{ path('artist_show', {'id': artist.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> Voir le profil
                                </a>

                                {% if artist.email %}
                                    <a href="mailto:{{ artist.email }}" class="btn btn-outline-secondary">
                                        <i class="fas fa-envelope"></i> Contacter
                                    </a>
                                {% endif %}

                                {% if artist.website %}
                                    <a href="{{ artist.website }}" target="_blank" class="btn btn-outline-secondary">
                                        <i class="fas fa-globe"></i> Site web
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> Aucun artiste pour le moment. Revenez plus tard !
        </div>
    {% endif %}
</div>
{% endblock %}
