{% extends 'admin/base.html.twig' %}

{% block title %}Projets - Admin{% endblock %}
{% block page_title %}Gestion des projets{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Liste des projets</h5>
        <a href="{{ path('admin_project_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Nouveau projet</a>
    </div>
    <div class="card-body">
        {% if projects %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead><tr><th>ID</th><th>Titre</th><th>Catégorie</th><th>Date</th><th>Actions</th></tr></thead>
                    <tbody>
                        {% for project in projects %}
                            <tr>
                                <td>{{ project.id }}</td>
                                <td><strong>{{ project.title }}</strong></td>
                                <td><span class="badge bg-primary">{{ project.category.name }}</span></td>
                                <td>{{ project.createdAt|date('d/m/Y') }}</td>
                                <td>
                                    <a href="{{ path('admin_project_show', {'id': project.id}) }}" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('admin_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <form method="post" action="{{ path('admin_project_delete', {'id': project.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucun projet pour le moment.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
