{% extends 'admin/base.html.twig' %}

{% block title %}{{ project.title }} - Admin{% endblock %}
{% block page_title %}Détails du projet{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{ project.title }}</h5>
        <div>
            <a href="{{ path('admin_project_edit', {'id': project.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</a>
            <a href="{{ path('admin_project_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
    <div class="card-body">
        {% if project.image %}
            <div class="text-center mb-4">
                <img src="{{ asset('uploads/projects/' ~ project.image) }}" alt="{{ project.title }}" class="img-fluid" style="max-width: 100%; max-height: 500px;">
            </div>
        {% endif %}
        <table class="table">
            <tbody>
                <tr><th style="width: 200px;">ID</th><td>{{ project.id }}</td></tr>
                <tr><th>Titre</th><td>{{ project.title }}</td></tr>
                <tr><th>Description</th><td>{{ project.description }}</td></tr>
                <tr><th>Catégorie</th><td><a href="{{ path('admin_category_show', {'id': project.category.id}) }}">{{ project.category.name }}</a></td></tr>
                <tr><th>Date de création</th><td>{{ project.createdAt|date('d/m/Y H:i') }}</td></tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
