{% extends 'admin/base.html.twig' %}

{% block title %}{{ artist.name }} - Admin{% endblock %}
{% block page_title %}DÃ©tails de l'artiste{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{ artist.name }}</h5>
        <div>
            <a href="{{ path('admin_artist_edit', {'id': artist.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</a>
            <a href="{{ path('admin_artist_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
    <div class="card-body">
        {% if artist.profileImage %}
            <div class="text-center mb-4">
                <img src="{{ asset('uploads/artists/' ~ artist.profileImage) }}" alt="{{ artist.name }}" class="img-thumbnail" style="max-width: 300px;">
            </div>
        {% endif %}
        <table class="table">
            <tbody>
                <tr><th style="width: 200px;">ID</th><td>{{ artist.id }}</td></tr>
                <tr><th>Nom</th><td>{{ artist.name }}</td></tr>
                <tr><th>Biographie</th><td>{{ artist.biography ?? 'Aucune biographie' }}</td></tr>
                <tr><th>Email</th><td>{{ artist.email ?? '-' }}</td></tr>
                <tr><th>Site web</th><td>{% if artist.website %}<a href="{{ artist.website }}" target="_blank">{{ artist.website }}</a>{% else %}-{% endif %}</td></tr>
                <tr><th>Nombre de projets</th><td><span class="badge bg-info">{{ artist.projects|length }}</span></td></tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
