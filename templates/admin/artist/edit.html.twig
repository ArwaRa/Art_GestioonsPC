{% extends 'admin/base.html.twig' %}

{% block title %}Modifier {{ artist.name }} - Admin{% endblock %}
{% block page_title %}Modifier l'artiste{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><h5 class="mb-0">Modifier: {{ artist.name }}</h5></div>
    <div class="card-body">
        {% if artist.profileImage %}
            <div class="mb-3 text-center">
                <img src="{{ asset('uploads/artists/' ~ artist.profileImage) }}" alt="{{ artist.name }}" class="img-thumbnail" style="max-width: 200px;">
            </div>
        {% endif %}
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.biography) }}
            {{ form_row(form.email) }}
            {{ form_row(form.website) }}
            {{ form_row(form.profileImageFile, {'help': 'Laissez vide pour conserver l\'image actuelle'}) }}
            <div class="d-flex justify-content-between mt-3">
                <a href="{{ path('admin_artist_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
