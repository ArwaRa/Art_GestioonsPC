{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord - Admin{% endblock %}

{% block page_title %}Tableau de bord{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h3>{{ total_projects }}</h3>
            <p><i class="fas fa-folder"></i> Projets</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <h3>{{ total_categories }}</h3>
            <p><i class="fas fa-tags"></i> Catégories</p>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Projets récents</h5>
            </div>
            <div class="card-body">
                {% if recent_projects %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Catégorie</th>
                                    <th>Date de création</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for project in recent_projects %}
                                    <tr>
                                        <td>{{ project.title }}</td>
                                        <td>
                                            <span class="badge bg-primary">{{ project.category.name }}</span>
                                        </td>
                                        <td>{{ project.createdAt|date('d/m/Y') }}</td>
                                        <td>
                                            <a href="{{ path('admin_project_show', {'id': project.id}) }}" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-center text-muted">Aucun projet pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-link"></i> Liens rapides</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_project_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouveau projet
                    </a>
                    <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouvelle catégorie
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
