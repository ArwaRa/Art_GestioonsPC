{% extends 'admin/base.html.twig' %}

{% block title %}{{ user.username }} - Admin{% endblock %}
{% block page_title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{ user.username }}</h5>
        <div>
            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</a>
            <a href="{{ path('admin_user_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr><th style="width: 200px;">ID</th><td>{{ user.id }}</td></tr>
                <tr><th>Nom d'utilisateur</th><td>{{ user.username }}</td></tr>
                <tr><th>Email</th><td>{{ user.email }}</td></tr>
                <tr><th>Rôles</th><td>{% for role in user.roles %}<span class="badge bg-secondary">{{ role }}</span> {% endfor %}</td></tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
