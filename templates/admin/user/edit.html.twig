{% extends 'admin/base.html.twig' %}

{% block title %}Modifier {{ user.username }} - Admin{% endblock %}
{% block page_title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><h5 class="mb-0">Modifier: {{ user.username }}</h5></div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.roles) }}
            <div class="d-flex justify-content-between mt-3">
                <a href="{{ path('admin_user_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
