{% extends 'admin/base.html.twig' %}

{% block title %}Modifier {{ category.name }} - Admin{% endblock %}

{% block page_title %}Modifier la cat√©gorie{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Modifier: {{ category.name }}</h5>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.description) }}
            </div>
            <div class="d-flex justify-content-between">
                <a href="{{ path('admin_category_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
