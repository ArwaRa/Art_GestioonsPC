{% extends 'admin/base.html.twig' %}

{% block title %}Catégories - Admin{% endblock %}

{% block page_title %}Gestion des catégories{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Liste des catégories</h5>
        <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle catégorie
        </a>
    </div>
    <div class="card-body">
        {% if categories %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Projets</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td><strong>{{ category.name }}</strong></td>
                                <td>{{ category.description|slice(0, 50) }}{{ category.description|length > 50 ? '...' : '' }}</td>
                                <td><span class="badge bg-info">{{ category.projects|length }}</span></td>
                                <td>
                                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucune catégorie pour le moment.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
